    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "http://localhost:3000/*",
      "https://localhost:3000/*",
      "https://app.pixzlo.com/*",
      "https://*.pixzlo.com/*",
      "https://api.figma.com/*"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*.svg",
          "assets/*.png"
        ],
        "matches": [
          "https://*/*"
        ]
      }
    ]
  }
}

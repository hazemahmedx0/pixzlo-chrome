{
  "name": "ruin-tedious-frog",
  "displayName": "Pixzlo",
  "version": "0.0.3",
  "description": "Pixzlo browser extension for capturing issues, highlighting elements, and submitting reports with Figma and Linear integration.",
  "author": "Pixzlo <hazemahmedx3@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
